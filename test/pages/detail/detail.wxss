.all {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
} 

.banner{
  width: 93%;
  height: 240px;
  margin: 3px;
  background-color:#f7dff5;
  padding:5px;
  border-radius: 5px 5px 5px 5px;
}

.infor{
  width: 90%;
  margin: 3px;
  border-radius: 5px 5px 5px 5px;
  background-color:#f7dff5;
  padding:10px;
}

.num{
  display: flex; 
  align-items: center;
  width: 90%;
  margin: 3px;
  border-radius: 5px 5px 5px 5px;
  background-color:#f7dff5;
  padding:10px;
}

.detail{
  width: 90%;
  margin: 3px;
  border-radius: 5px 5px 5px 5px;
  background-color:#f7dff5;
  padding:10px;
}

.footer{
  background-color: white;
  /*height: 50px;*/
  position: fixed;
  bottom: 0px;
  border-top:1px solid #cbcbcb;
  width: 100%
}

